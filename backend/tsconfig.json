{
  "compilerOptions": {
    "module": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noEmitOnError": true,
    //"noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ]
}
